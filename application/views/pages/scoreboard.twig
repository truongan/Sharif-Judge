{% set selected = 'scoreboard' %}
{% extends 'templates/base.twig' %}
{% block icon %}fas fa-star{% endblock %}
{% block title %}Scoreboard{% endblock %}
{% block head_title %}Scoreboard{% endblock %}

{% block title_menu %}
<span class="title_menu_item">
	<a href="{{ site_url('scoreboard/full/'~assignment.id) }}">
	<i class="fas fa-star color10"></i> Full information </a>
</span>
<span class="title_menu_item">
	<a href="{{ site_url('scoreboard/simplify/'~assignment.id) }}">
	<i class="fas fa-star-half-alt color10"></i> Minimal information </a>
</span>
{% endblock %} {# title_menu #}


{% block main_content %}
<div class="col">
{% if assignment.id == 0 %}
<p>No assignment is selected.</p>
{% elseif not assignment.scoreboard and user.level < 2%}
<p>Scoreboard is disabled.</p>
{% else %}
	<p>Scoreboard of <span>{{ assignment.name }}</span></p>
	{{ scoreboard|raw }}
{% endif %}
</div>
{% endblock %} {# main_content #}
