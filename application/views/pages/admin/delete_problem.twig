{% set selected = 'Problems' %}
{% extends 'templates/base.twig' %}
{% block icon %}fas fa-times{% endblock %}
{% block title %}Delete Problems{% endblock %}
{% block head_title %}Delete Problems{% endblock %}



{% block main_content %}
	<div class="col-12">
		{% if problem.no_of_sub == 0 or problem.no_of_ass == 0 %}
			<p>Are you sure you want to delete this Problem?</p>
			<p>
				Problem id: {{ problem.id }}<br>
				Problem name: {{ problem.name }}
			</p>
			<p>All test cases, submission results and submitted files will be deleted.</p>
			<p>You may want to keep a backup of this Problem before deleting.</p>
			{{ form_open('problems/destroy/'~problem.id) }}
				<input type="hidden" name="delete" value="delete"/>
				<p class="input_p">
					<input type="submit" class="btn btn-danger" value="Delete this problems"/>
					<a href="{{ site_url('assignments') }}" class="btn btn-primary">Do not delete</a>
				</p>
			</form>
		{% else %}
			<div class="alert alert-warning" role="alert">
				This problem already have {{ problem.no_of_sub }} submission(s) across {{ problem.assignment }} assignment(s). You should remove those assignments before remove this problem.
			</div>
		{% endif %}
	</div>
{% endblock %}  {# main_content #}
